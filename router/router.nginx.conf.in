server {
    server_name auth.*;

    location / {
        proxy_pass https://auth/;
        include /etc/nginx/proxy.conf;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
    }

    listen 443 ssl;
    listen [::]:443 ssl;
}

