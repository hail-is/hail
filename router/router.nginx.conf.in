server {
    server_name @domain@ www.*;

    location = /healthcheck {
      return 204;
    }

    location / {
        proxy_pass https://website/;
        include /etc/nginx/proxy.conf;
    }

    listen 443 ssl default_server;
    listen [::]:443 ssl default_server;
}

